 <% include ./partials/header.ejs %>
    <div id="main">
    <h1 id="wlcm"> Welcome to Dribble</h1>
    <div id="card">
        
            <div id="img">
                <img src="/images/upload/<%= user.image %>" alt="">
            </div>
            <form id="hidden" action="/upload" method="post" enctype="multipart/form-data">
                <input id="fileinp" type="file" name="filename">
                <input id="sbmt" type="submit">
            </form>
            <div id="text">
                <h1> <%= user.username %> </h1>
                <h4> <%= user.email %> </h4>
                <p id="peo"> ❤️ by <span><%= user.like.length %></span> people</p>
                <a href="/like/<%= user._id %>" class="btn btn-primary">Like Profile</a>
            </div>
    </div> 
    <div id="post">
        <form action="">
        <textarea placeholder="something write here !"></textarea>
        <input type="submit">
        </form> 
    </div>
</div>

<script>
    document.querySelector("#img").addEventListener("click" , function(){
        document.querySelector("#fileinp").click()
    })
    document.querySelector("#fileinp").addEventListener("change" , function(){
        document.querySelector("#sbmt").click()
    })

</script>


</body>
</html>
   
